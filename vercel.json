{
	"version": 2,
	"builds": [
		{ "src": "api/**/*.py", "use": "@vercel/python" },
		{ "src": "frontend/**", "use": "@vercel/static" }
	],
	"routes": [
		{ "src": "/api/admin/records/(.*)", "dest": "/api/admin" },
		{ "src": "/api/admin/records", "dest": "/api/admin" },
		{ "src": "/api/admin/upsert-all", "dest": "/api/admin" },
		{ "src": "/api/admin", "dest": "/api/admin" },
		{ "src": "/api/chat", "dest": "/api/chat.py" },
		{ "src": "/api/(.*)", "dest": "/api/$1" },
		{ "src": "^/$", "dest": "/frontend/index.html" },
		{ "src": "^/(.*)$", "dest": "/frontend/$1" }
	]
}
